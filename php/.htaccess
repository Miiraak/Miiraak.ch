# Protect sensitive directories
<DirectoryMatch "^. */logs/.*$">
    Require all denied
</DirectoryMatch>

# Protect admin pages in /php/
<FilesMatch "^admin-.*\. php$">
    # Option 1: Allow from everywhere (not recommended for production)
    # Require all granted
    
    # Option 2: Require password (recommended)
    AuthType Basic
    AuthName "Admin Area"
    AuthUserFile /home/your-path/. htpasswd
    Require valid-user
    
    # Option 3: Whitelist specific IPs only (most secure)
    # Require ip 123.456.789.0
</FilesMatch>

# Allow download. php
<Files "download.php">
    Require all granted
</Files>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>